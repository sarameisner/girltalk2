var video = document.getElementById('myVideo2');

// Lytter efter scroll-hÃ¦ndelser
window.addEventListener('scroll', function() {
  // Tjekker om videoen er synlig i viewport
  if (isInViewport(video)) {
    // Starter videoen
    video.play();
  } else {
    // Pauser videoen hvis den ikke er synlig
    video.pause();
  }
});

// Funktion for at tjekke om et element er synligt i viewport
function isInViewport(element) {
  var rect = element.getBoundingClientRect();
  var windowHeight = (window.innerHeight || document.documentElement.clientHeight);
  // Returner true hvis bunden af elementet er synligt i viewport
  return (rect.bottom >= 0 && rect.bottom <= windowHeight);
}
</script>
