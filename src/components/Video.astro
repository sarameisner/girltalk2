<style>
  .container {
    display: grid;
    grid-template-columns: 1fr 3fr 1fr; 
    gap: 20px;
    margin: 20px;
    margin-top: 100px;
  }

  .heart {
    width: 60px;
    height: auto;
    animation: pulse 1.5s ease-in-out infinite alternate;
  }

  .left-hearts,
  .right-hearts {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 80px;
  }

  .video-container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 650px; 
    overflow: hidden; 
  }

  video {
    border-radius: 16px;
    width: auto;
    height: 100%;
  }

  @keyframes pulse {
    0% {
      transform: scale(1);
    }
    100% {
      transform: scale(1.1);
    }
  }
</style>

<script>
// Hent videoelementet
var video = document.getElementById('myVideo');

// Lyt efter scroll-hÃ¦ndelser
window.addEventListener('scroll', function() {
  // Tjek om videoen er synlig i viewport
  if (isInViewport(video)) {
    // Start videoen
    video.play();
  } else {
    // Pause videoen hvis den ikke er synlig
    video.pause();
  }
});

// Funktion for at tjekke om et element er synligt i viewport
function isInViewport(element) {
  var rect = element.getBoundingClientRect();
  var windowHeight = (window.innerHeight || document.documentElement.clientHeight);
  // Returner true hvis bunden af elementet er synligt i viewport
  return (rect.bottom >= 0 && rect.bottom <= windowHeight);
}
</script>
