<script>
    // Get the elements to toggle
    const openDivs = document.querySelectorAll('.open');
   const closedDivs = document.querySelectorAll('.closed');

   // Function to check the current time and toggle the visibility
   function toggleDivs() {
       const now = new Date();
       const hours = now.getHours();
       const minutes = now.getMinutes();

       // Check if current time is between 18:30 and 24:00
       if ((hours > 18 || (hours === 18 && minutes >= 30)) && (hours < 24)) {
           openDivs.forEach(div => div.style.display = 'flex');
           closedDivs.forEach(div => div.style.display = 'none');
       } else {
           openDivs.forEach(div => div.style.display = 'none');
           closedDivs.forEach(div => div.style.display = 'flex');
       }
   }

   // Call the function initially to set the correct visibility
   toggleDivs();

   // Update the visibility every minute
   setInterval(toggleDivs, 60000);
</script>
